pkgname=tower-installer
pkgver=0.1.0
pkgrel=1
pkgdesc="Installation script for TowerOS-Thinclient"
url="https://github.com/towercomputers/tools"
arch="all"
license="GPL-3.0-or-later"
source="alpine_install.sh"

build() {
    return 0
}

check() {
    return 0
}

package() {
    installation_path="$pkgdir"/root/installer
    mkdir -p "$installation_path"
    cp -f alpine_install.sh "$installation_path"
}

